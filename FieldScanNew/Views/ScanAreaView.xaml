<UserControl x:Class="FieldScanNew.Views.ScanAreaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:FieldScanNew.ViewModels"
             mc:Ignorable="d" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance Type=viewmodels:ScanAreaViewModel}"
             d:DesignHeight="550" d:DesignWidth="900">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,20,0">
            <TextBlock Text="扫描区域配置" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <GroupBox Header="物理坐标范围 (mm)" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="X 起始:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Settings.StartX, StringFormat=F2}" Margin="5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="X 结束:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Settings.StopX, StringFormat=F2}" Margin="5"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Y 起始:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Settings.StartY, StringFormat=F2}" Margin="5"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Y 结束:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Settings.StopY, StringFormat=F2}" Margin="5"/>
                </Grid>
            </GroupBox>

            <GroupBox Header="扫描分辨率" Padding="10" Margin="0,15,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="X 点数:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Settings.NumX}" Margin="5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Y 点数:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Settings.NumY}" Margin="5"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Z 高度:" VerticalAlignment="Center" Margin="5"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Settings.ScanHeightZ}" Margin="5"/>
                </Grid>
            </GroupBox>

            <TextBlock Text="{Binding StatusText}" Foreground="Blue" TextWrapping="Wrap" Margin="0,20,0,0"/>
        </StackPanel>

        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Background="#333" ClipToBounds="True">
            <Viewbox Stretch="Uniform">
                <Grid Width="{Binding DutImageSource.PixelWidth}" Height="{Binding DutImageSource.PixelHeight}" 
                      MouseDown="Grid_MouseDown" MouseMove="Grid_MouseMove" MouseUp="Grid_MouseUp" Cursor="Cross">

                    <Image Source="{Binding DutImageSource}"/>

                    <Canvas x:Name="DrawingCanvas">
                        <Rectangle x:Name="SelectionRect" Stroke="Cyan" StrokeThickness="2" Fill="#3300FFFF" Visibility="Collapsed"/>
                    </Canvas>
                </Grid>
            </Viewbox>
        </Border>
    </Grid>
</UserControl>