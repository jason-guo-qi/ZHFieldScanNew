<Window x:Class="FieldScanNew.Views.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:viewmodels="clr-namespace:FieldScanNew.ViewModels"
        xmlns:views="clr-namespace:FieldScanNew.Views"

        mc:Ignorable="d"
        Title="配置" Height="550" Width="900"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:InstrumentSetupViewModel}">
            <views:InstrumentSetupView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:ProbeSetupViewModel}">
            <views:ProbeSetupView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ScanSettingsViewModel}">
            <views:ScanSettingsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ZCalibViewModel}">
            <views:ZCalibView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:XYCalibViewModel}">
            <views:XYCalibView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ScanAreaViewModel}">
            <views:ScanAreaView/>
        </DataTemplate>
    </Window.Resources>

    <ContentPresenter Content="{Binding}" Margin="10"/>
</Window>