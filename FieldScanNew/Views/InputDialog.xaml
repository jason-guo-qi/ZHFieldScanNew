<Window x:Class="FieldScanNew.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="输入" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
        MinWidth="300" MaxWidth="500">
    <StackPanel Margin="15">
        <TextBlock x:Name="QuestionText" Margin="0,0,0,10" TextWrapping="Wrap"/>
        <TextBox x:Name="AnswerTextBox" MinWidth="250"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="确定" IsDefault="true" Click="OkButton_Click" MinWidth="60" Margin="0,0,10,0"/>
            <Button Content="取消" IsCancel="true" MinWidth="60"/>
        </StackPanel>
    </StackPanel>
</Window>